        <services>
            <service name="Game_Server.LobbyService">
                <endpoint address="" binding="basicHttpBinding" contract="Game_Server.ILobbyService" />
                <host>
                    <baseAddresses>
                        <add baseAddress="http://localhost:8080/LobbyService" />
                    </baseAddresses>
                </host>
