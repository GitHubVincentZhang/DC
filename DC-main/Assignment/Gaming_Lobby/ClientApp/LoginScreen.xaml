<Window x:Class="ClientApp.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="LoginScreen" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Center" Margin="0,199,0,0" VerticalAlignment="Top" Width="200"/>
        <Button Content="Login" HorizontalAlignment="Center" Margin="0,239,0,0" VerticalAlignment="Top" Width="100" Click="LoginButton_Click"/>
        <TextBlock x:Name="StatusTextBlock" HorizontalAlignment="Left" Margin="20,120,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
