<Window x:Class="ClientApp.PrivateChatScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="PrivateChatScreen" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="ChatListBox" HorizontalAlignment="Left" Margin="20" VerticalAlignment="Top" Width="500" Height="250"/>
        <TextBox x:Name="PrivateMessageTextBox" HorizontalAlignment="Left" Margin="20,280,0,0" VerticalAlignment="Top" Width="400"/>
        <Button Content="Send" HorizontalAlignment="Left" Margin="440,280,0,0" VerticalAlignment="Top" Width="80" Click="SendPrivateMessageButton_Click"/>
    </Grid>
</Window>
